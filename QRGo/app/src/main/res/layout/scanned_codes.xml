<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="535dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/scroll" />

            <ListView
                android:id="@+id/ScannedQRList"
                android:layout_width="wrap_content"
                android:layout_height="491dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="80dp"
                android:layout_marginTop="107dp"
                android:layout_marginEnd="91dp"
                android:layout_marginBottom="72dp">

            </ListView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/hScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="23dp"
                android:layout_marginEnd="64dp"
                android:layout_toStartOf="@+id/HighestVal"
                android:text="Highest QR Score"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="23dp"
                android:layout_marginTop="91dp"
                android:layout_marginEnd="158dp"
                android:layout_toStartOf="@+id/totalVal"
                android:text="Total Score"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tQRS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="23dp"
                android:layout_marginBottom="43dp"
                android:text="Total QRs Scanned"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/lScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hScore"
                android:layout_alignParentStart="true"
                android:layout_marginStart="23dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="73dp"
                android:layout_toStartOf="@+id/LowestVal"
                android:text="Lowest QR Score"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/HighestVal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="25dp"
                android:hint="Highest Val"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/LowestVal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/HighestVal"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                android:hint="Lowest Val"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/TotalScanned"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="42dp"
                android:hint="Total Scanned"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/totalVal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/LowestVal"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="23dp"
                android:layout_marginEnd="28dp"
                android:hint="Total Val"
                android:textSize="20dp" />


        </RelativeLayout>

    </LinearLayout>
</ScrollView>
