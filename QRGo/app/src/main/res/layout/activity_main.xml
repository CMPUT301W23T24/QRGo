<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/viewProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/findFriends"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="132dp"
        android:layout_marginEnd="141dp"
        android:layout_marginBottom="60dp"
        android:text="View Profile" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scan QR Code"
        android:layout_centerInParent="true"
        android:id="@+id/scanQRButton"/>


    <Button
        android:id="@+id/findFriends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/scanQRButton"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="142dp"
        android:layout_marginBottom="9dp"
        android:text="Find Friends" />

    <Button
        android:id="@+id/goToSearchB"
        android:layout_width="143dp"
        android:layout_height="wrap_content"

        android:layout_below="@id/scanQRButton"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"

        android:layout_marginEnd="135dp"
        android:text="Search QR" />

    <Button
        android:id="@+id/scannedCodes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/viewProfile"
        android:layout_marginLeft="130dp"
        android:text="Scanned Codes" />

</RelativeLayout>