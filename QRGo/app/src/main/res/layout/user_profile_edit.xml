<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/userNameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username:"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="66dp" />

    <EditText
        android:id="@+id/userNameEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:digits="0123456789-"
        android:ems="10"
        android:hint="Insert a username"
        android:inputType="text"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="85dp" />

    <TextView
        android:id="@+id/nameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="130dp" />


    <EditText
        android:id="@+id/edit_text_station_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Insert a name"
        android:inputType="text"
        android:maxLength="30"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="149dp" />

    <TextView
        android:id="@+id/EmailView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email: "
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="194dp" />

    <EditText
        android:id="@+id/emailEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:digits="GD"
        android:ems="10"
        android:hint="Insert an email"
        android:inputType="text"
        android:maxLength="1"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="213dp" />


    <TextView
        android:id="@+id/phoneNumberView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Number:"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="258dp" />

    <EditText
        android:id="@+id/phoneNumberEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:digits="GD"
        android:ems="10"
        android:hint="Insert a phone number"
        android:inputType="text"
        android:maxLength="1"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="277dp" />

    <Button
        android:id="@+id/cancelEditProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        tools:layout_editor_absoluteX="49dp"
        tools:layout_editor_absoluteY="621dp" />

    <Button
        android:id="@+id/saveEditProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        tools:layout_editor_absoluteX="243dp"
        tools:layout_editor_absoluteY="616dp" />


</androidx.constraintlayout.widget.ConstraintLayout>